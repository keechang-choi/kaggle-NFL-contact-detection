{
    "name": "kaggle NFL training container",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "../"
    },
    "mounts": [
        "type=bind,source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/docker_user/.ssh",
        "type=bind,source=${localWorkspaceFolder},target=/workspace"
    ],
    "runArgs": [
        "--gpus",
        "device=0",
        "--shm-size=4gb"
    ],
    // Set *default* container specific settings.json values on container create.
    "settings": {
        // Integrated terminal
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "/bin/zsh"
            },
            "bash": {
                "path": "/bin/bash"
            }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        // Formatting
        "python.formatting.provider": "autopep8"
    },
    "postCreateCommand": "bash .devcontainer/post-command.sh",
    "remoteUser": "docker_user",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    }
}